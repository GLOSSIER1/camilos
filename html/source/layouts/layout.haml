!!! 5
%html{html_attrs(lang = 'en-US')}
  %head
    %meta{ :charset => "utf-8" }
    %title
      Camilo's
      
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    
    // Import Fonts
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700,900'
    
    // Javascripts
    = javascript_include_tag 'jquery-1.9.1.min.js'
    = javascript_include_tag '5grid/init.js?use=mobile,desktop,1000px&amp;mobileUI=1&amp;mobileUI.theme=none&amp;mobileUI.titleBarHeight=0'
    = javascript_include_tag 'jquery.dropotron-1.2.js'
    = javascript_include_tag 'init.js'
    
    // Import CSS
    %noscript
      = stylesheet_link_tag '5grid/core.css'
      = stylesheet_link_tag '5grid/core-desktop.css'
      = stylesheet_link_tag '5grid/core-1200px.css'
      = stylesheet_link_tag '5grid/core-noscript.css'
      = stylesheet_link_tag 'style'
      = stylesheet_link_tag 'style-desktop.css'

    <!--[if lte IE 8]><link rel="stylesheet" href="stylesheets/ie8.css" /><![endif]-->

  %body.homepage
    
    = yield